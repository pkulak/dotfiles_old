### Idle configuration
exec swayidle -w \
         timeout 300 'playerctl pause' \
         timeout 600 'swaymsg "output * dpms off"' \
                 resume 'swaymsg "output * dpms on"' \

# (1440 - (1080 / 1.25))
# 1920 / 1.25
output eDP-1 pos 0 576 scale 1.25
output HDMI-A-1 pos 1536 0

workspace 1

exec ~/.config/sway/home-screen-t460.sh

